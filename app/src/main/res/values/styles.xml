<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorClear</item>

        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:tint">@color/colorClear</item>
        <item name="android:textColor">@color/colorClear</item>
        <item name="actionOverflowMenuStyle">@style/AppTheme.ActionBAr.Menu.Popup</item>

        <item name="snackbarStyle">@style/AppTheme.SnackBar</item>
        <item name="checkboxStyle">@style/AppTheme.Checkbox</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="radioButtonStyle">@style/AppTheme.RadioButton</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item>

        <item name="android:scrollbarTrackVertical">@null</item>
        <item name="android:scrollbarThumbVertical">@null</item>
    </style>

    <style name="AppTheme.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/background_container</item>
    </style>

    <style name="AppTheme.ActionBAr.Menu.Popup" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:popupBackground">@drawable/background_container</item>
    </style>

    <style name="AppTheme.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@drawable/accent_tint</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorClear</item>
        <item name="android:background">@drawable/background_container</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="textColorAlertDialogListItem">@color/colorClear</item>
    </style>

    <style name="AppTheme.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorClear</item>
        <item name="buttonTint">@drawable/accent_tint</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorClear</item>
        <item name="android:textColorHint">@color/colorClearDisable</item>
        <item name="android:backgroundTint">@drawable/edit_tint</item>
    </style>

    <style name="AppTheme.NumberPicker">
        <item name="colorControlNormal">@color/colorClear</item>
        <item name="android:textColorPrimary">@color/colorClear</item>
    </style>

</resources>
