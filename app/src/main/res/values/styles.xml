<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
        <item name="checkboxStyle">@style/AppTheme.Checkbox</item>
    </style>

    <style name="AppTheme.ToolBar">
        <item name="titleTextColor">@color/colorClear</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:tint">@null</item>
        <item name="colorControlNormal">@color/colorClear</item>
        <item name="actionOverflowMenuStyle">@style/AppTheme.ToolBar.Menu.Popup</item>
    </style>

    <style name="AppTheme.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ToolBar.Menu.Button" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorClear</item>
    </style>

    <style name="AppTheme.ToolBar.Menu.Popup" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="AppTheme.Night">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorClear</item>
        <item name="android:tint">@color/colorClear</item>
        <item name="colorControlHighlight">@color/grey</item>
        <item name="android:thumbTint">@drawable/switch_thumb_nigth</item>
    </style>

    <style name="AppTheme.Day">
        <item name="android:background">@color/colorClear</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorClear</item>
    </style>

    <style name="AppTheme.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@drawable/checkbox_tint</item>
    </style>

</resources>
